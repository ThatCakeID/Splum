<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Splum" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/colorWhite</item>

        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="colorOnBackground">@color/colorWhite</item>

        <item name="materialAlertDialogTheme">@style/Theme.Splum.DialogTheme</item>
        <item name="alertDialogTheme">@style/Theme.Splum.DialogTheme</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:navigationBarColor" tools:targetApi="O_MR1">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="O_MR1">false</item>

        <item name="tabCounterTintColor">@color/colorPrimaryLight</item>
    </style>

    <style name="Theme.Splum.DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Splum.ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.Splum.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.Splum.ButtonStyle</item>

        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@color/colorWhite</item>
    </style>

    <style name="Theme.Splum.ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="rippleColor">@color/colorSecondaryTransparent</item>
    </style>
</resources>